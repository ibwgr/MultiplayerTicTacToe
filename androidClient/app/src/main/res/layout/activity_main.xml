    <TextView
        android:id="@+id/label_displayplayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Tic Tac Toe"
        android:lines="2"
        android:textStyle="normal"
        android:layout_weight="0.08" />

    <TextView
        android:id="@+id/label_displayzeile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/label_displayplayers"
        android:text="Bitte Spielernamen eingeben"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:lines="2"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/edit_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_below="@id/label_displayzeile"
        android:inputType="text"
        android:text="Emma"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_displayzeile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="Start" />

    <ImageView
        android:id="@+id/waiting_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/blocked3"
        android:visibility="invisible"
        />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Game_GridLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_below="@id/edit_username"
        android:layout_marginTop="20dp"
        tools:context=".GridXMLActivity" >

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />

        <ch.ibw.semesterarbeit2017.multiplayertictactoe.multiplayertictactoe.GameButton
            android:id="@+id/gameButton8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gf_init"
            />
    </GridLayout>

    <TextView
        android:id="@+id/label_statistics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/Game_GridLayout"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:lines="8"
        android:textStyle="normal"
        />
    <!--android:background="#cc7e7b7b"-->

