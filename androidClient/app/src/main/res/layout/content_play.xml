    <TextView
        android:id="@+id/label_displayzeile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/layout_top_players"
        android:text="Bitte Spielernamen eingeben:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:lines="2"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/edit_username"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@id/label_displayzeile"
        android:inputType="text"
        android:text="Emma"
        android:background="@drawable/eingabefeld"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/label_displayzeile"
        android:layout_alignStart="@+id/label_displayzeile" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_alignBaseline="@+id/edit_username"
        android:layout_alignBottom="@+id/edit_username"
        android:layout_alignRight="@+id/Game_GridLayout"
        android:layout_alignEnd="@+id/Game_GridLayout" />

